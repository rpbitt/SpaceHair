@model Colaborador
@{
    ViewData["Title"] = "Cadastro";
}

<form method="POST" asp-action="Cadastro">
    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" required>
    </p>

    <p>
        <label asp-for="Login">Login:</label>
        <input asp-for="Login">
    </p>
    <p>
        <label asp-for="Senha">Senha:</label>
        <input asp-for="Senha">

    </p>
    <p>
        <label asp-for="DataContratacao">Data de Contratação:</label>
        <input asp-for="DataContratacao" type="date">
    </p>

    <p>
        <input type="submit" value="Cadastrar">
    </p>

</form>
<p>
    @ViewBag.Mensagem
</p>